            <div class="row">
                <!--single product -->
                <% if (Array.isArray(products) && products.length > 0) { %>
                <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-product">
                        <div class="product-image" style="height: 250px; justify-content: center; " >
