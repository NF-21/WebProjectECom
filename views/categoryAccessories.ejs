<%- include('partials/pageHeader') %>


    <!-- Product section-->
    <section class="trending-section-title" style="margin-top: 100px; margin-bottom: 200px;">
        <div class="container">
            <div class="row">
            </div>
            <!--End Trending section Paragrah-->

            <div class="row">
       
        <% if (Array.isArray(products) && products.length > 0) { %>
                <% products.forEach(product => { %>
        <% if (product.category === 'Accessories') { %>        
            <div class="col-lg-3 col-md-6 col-12">
                <div class="single-product">
                    <div class="product-image">
                        <img src="/uploads/<%= product.image %>" alt="#">
                        <div class="button-product">
                            <a href="#" class="btn-product"><i class="lni lni-cart"></i>Add to cart</a>
                        </div>
                    </div>
                    <div class="product-info">
                        <span class="category">Accessories</span>
                        <h4 class="title-info">
                            <a href="#"><%= product.productName %></a>
                        </h4>
                        <div class="price">
                            <span>$<%= product.status %></span>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    <% }); %>
<% } else { %>
    <p class="mt-4">No products found.</p>
<% } %>
            
    </div>
        </div>
    </section>
    <!-- End Product -->
    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- jQuery -->
    <script src='https://code.jquery.com/jquery-3.3.1.slim.min.js'></script>
    <!-- Popper JS -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js'></script>
    <!-- Bootstrap JS -->
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js'></script>
    <!-- Footer -->
    <%- include('partials/footer') %>



    <script>
        $(document).ready(function(){

        $('#itemslider').carousel({ interval: 3000 });

        $('.carousel-showmanymoveone .item').each(function(){
        var itemToClone = $(this);

        for (var i=1;i<6;i++) {
        itemToClone = itemToClone.next();

        if (!itemToClone.length) {
        itemToClone = $(this).siblings(':first');
        }

        itemToClone.children(':first-child').clone()
        .addClass("cloneditem-"+(i))
        .appendTo($(this));
        }
        });
        });

    </script>


</body>


</html>